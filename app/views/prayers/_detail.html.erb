<div class="panel panel-default">
  <div class="panel-body">
    <p class="lead"><%= prayer_html(@prayer).html_safe %></p>
    <% @prayer.tags.each do |tag| %>
      <span class="label label-primary"><%= tag %></span>
    <% end %>
    <% if @prayer.answered? %>
      <p class="lead"><%= @prayer.answer %></p>
    <% end %>
    <%= yield %>
  </div>
</div>
