<% if current_user %>
  <div class="panel panel-default">
    <div class="panel-body">
      <%= @prayer.text %>
      <%= link_to 'Delete', @prayer, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs pull-right' %>
    </div>
  </div>
  <%= link_to 'Next', root_path, class: 'btn btn-default' %>
  <%= link_to 'Add Prayer', new_prayer_path, class: 'btn btn-default' %>
<% else %>
  Sign in or register to record prayers!
<% end %>
