<% if current_user %>
  <div class="panel panel-default">
    <div class="panel-body">
      <%= @prayer.text %>
      <%= link_to 'Delete', @prayer, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs pull-right' %>
    </div>
  </div>
  <div class="row">
    <div class="hidden-xs hidden-sm col-md-6"></div>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <div class="form-group">
        <%= link_to 'Next', root_path, class: 'btn btn-primary btn-lg btn-block' %>
      </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <div class="form-group">
        <%= link_to 'Add Prayer', new_prayer_path, class: 'btn btn-default btn-lg btn-block' %>
      </div>
    </div>
  </div>

<% else %>
  Sign in or register to record prayers!
<% end %>
