<h2>Add Prayer</h2>

<% if @prayer.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @prayer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @prayer do |f| %>
  <div class="form-group">
    <%= f.text_area :text, placeholder: 'Prayer', class: 'form-control' %>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="hidden-xs hidden-sm col-md-6"></div>
      <div class="col-sm-12 col-md-3">
        <%= f.submit 'Save Prayer', class: 'btn btn-primary btn-block' %>
      </div>
      <div class="col-sm-12 col-md-3">
        <%= link_to 'Cancel', root_path, class: 'btn btn-default btn-block' %>
      </div>
    </div>
  </div>
<% end %>
