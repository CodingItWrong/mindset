<% if @resolution.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @resolution.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= render 'thoughts/detail' %>

<%= form_for @resolution, url: thought_resolution_path do |f| %>
  <div class="form-group">
    <%= f.text_area :text, placeholder: 'Resolution', rows: 3, class: 'form-control input-lg' %>
  </div>
  <div class="row">
    <div class="hidden-xs hidden-sm col-md-4"></div>
    <div class="col-xs-12 col-sm-6 col-md-4">
      <div class="form-group">
        <%= f.submit 'Mark Resolved', class: 'btn btn-primary btn-lg btn-block' %>
      </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-4">
      <div class="form-group">
        <%= link_to 'Cancel', @thought, class: 'btn btn-default btn-lg btn-block' %>
      </div>
    </div>
  </div>
<% end %>
